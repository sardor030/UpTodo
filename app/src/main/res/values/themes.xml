<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.UpTodo" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:navigationBarColor">@color/dark_gray</item>
        <item name="materialCalendarTheme">@style/ThemeOverlay.App.DatePicker</item>
    </style>

    <style name="Theme.UpTodo" parent="Base.Theme.UpTodo" />

    <style name="CustomBottomSheetDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="android:background">@drawable/bg_home_bottom_sheet</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">28dp</item>
    </style>
    <style name="ThemeOverlay.App.DatePicker" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimary">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:fontFamily">@font/ft_lato_bold</item>
        <item name="materialCalendarHeaderTitle">@style/CustomDateTitleStyle</item>
        <item name="materialCalendarHeaderSelection">@style/CustomDateSelectedStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/CustomDateButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/CustomDateButtonStyle</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="CustomDateButtonStyle">
        <item name="android:fontFamily">@font/ft_lato_regular</item>
        <item name="android:textSize">14.sp</item>
        <item name="android:textColor">@color/light_blue</item>
    </style>

    <style name="CustomDateSelectedStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/ft_lato_regular</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="CustomDateTitleStyle">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ft_lato_regular</item>
    </style>
</resources>